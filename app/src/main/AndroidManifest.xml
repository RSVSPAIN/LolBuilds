<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.raul.lolbuilds">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".view.activities.AjustesActivity"
            android:label="@string/title_activity_ajustes"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".view.activities.BansActivity"
            android:label="@string/title_activity_bans"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.ContactoActivity"
            android:label="@string/title_activity_contacto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.BuildActivity"
            android:label="@string/title_activity_champ"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.FirstTimeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity
            android:name=".view.activities.HelpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".view.activities.SignInActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.VideoActivity"
            android:label="@string/title_activity_video"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>